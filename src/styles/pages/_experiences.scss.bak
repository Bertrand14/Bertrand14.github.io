@import '../variables';


.AllExperiences{
 display:grid;
 grid-template-columns: 1fr 1fr;
}

.experiences{
 background-color: $secondaryMint2;
 display:inline-flex;
 flex-direction: column;
 flex-wrap: wrap;
 &.works{
  margin-left: 1%;
  border-right:1px solid grey;
 }
 &.studies{
  border-left:1px solid grey;
  margin-right:1%;
 }
 > div{
  border-bottom:1px solid grey;
  display: block;
  padding:1%;
  position:relative;
  .date{
   width:100%;
   border-radius: 50%;
   padding:1% 2%;
   background-color: $thirdYellow1;
  }
 }
}